pipeline {
    agent {
        label 'docker'
    }
    options { skipDefaultCheckout() }
    // environment {


    // }
    stages {
        stage('Checkout') {
            steps {
                deleteDir()
                git 'https://github.com/lokeshkamalay/simple-java-maven-app'
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'maven'
                    label 'docker'
                }
            }
            steps {
                sh "mvn clean package"
            }
        }
        stage('verify the output') {
            steps {
                sh "ls -latr"
            }
        }
    }
}
